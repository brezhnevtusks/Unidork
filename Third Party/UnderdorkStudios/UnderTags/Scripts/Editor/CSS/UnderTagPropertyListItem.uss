#tag-container {
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    flex-grow: 0;
    flex-shrink: 0;
    flex-basis: 100%;
    align-self: stretch;
}

#main-tag-container {
    height: 20px;
    max-height: 20px;
    flex-direction: row;
    flex-shrink: 0;
    flex-basis: auto;
    flex-grow: 0;
    align-self: stretch;
}

#child-tag-container {
    flex-grow: 0;
    flex-shrink: 0;
    margin-top: 0;
    white-space: normal;
    flex-wrap: nowrap;
    flex-direction: column;
    flex-basis: auto;
    align-self: stretch;
}

#expand-tag-container {
    flex-direction: row;
    flex-basis: 90%;
    flex-shrink: 0;
    flex-grow: 1;
}

#expand-tag-arrow {
    width: 15px;
    height: 15px;
    align-self: center;
    justify-content: flex-start;
    align-items: auto;
    flex-grow: 0;
    flex-shrink: 0;
    background-image: var(--unity-icons-foldout-checked);
    margin-right: 5px;
}

#tag-toggle {
    width: 15px;
    height: 15px;
    margin-right: 2.5px;
}

#tag-label {
    align-self: center;
    margin-left: 5px;
    -unity-text-align: middle-left;
    font-size: var(--unity-metrics-default-font_normal_size);
    color: var(--unity-colors-default-text);
}

.expand-tag-arrow-rotated {
    rotate: -90deg;
}

.expand-tag-arrow-hidden {
    display: flex;
    opacity: 0;
}
